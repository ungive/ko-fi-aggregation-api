{
  "name": "ko-fi-aggregation-api",
  "version": "0.1.0",
  "description": "API for aggregating and accessing Ko-fi webhook data ",
  "main": "app.ts",
  "type": "module",
  "private": true,
  "directories": {
    "test": "test"
  },
  "fastify": {
    "ignore-watch": [
      "node_modules",
      "dist"
    ],
    "require": "ts-node/register"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "npm run build && fastify start -l info dist/app.js",
    "dev": "concurrently \"npm run watch\" \"fastify start -w -l info -P dist/app.js\"",
    "test": "npm run build && node --test test/**/*.test.js"
  },
  "keywords": [
    "ko-fi",
    "api"
  ],
  "author": "Jonas van den Berg",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/sensible": "^6.0.0",
    "@sinclair/typebox": "^0.34.37",
    "dotenv": "^17.0.1",
    "fastify": "^5.4.0",
    "fastify-cli": "^7.4.0",
    "fastify-plugin": "^5.0.0"
  },
  "devDependencies": {
    "@fastify/type-provider-typebox": "^5.1.0",
    "@types/node": "^24.0.10",
    "concurrently": "^9.2.0",
    "fastify-tsconfig": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}